<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show CRUD</title>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>
</head>
<body>
   <table style="width: 100%;">
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Address</th>
            <th>Action</th>
        </tr>

        <% for(let i=0; i < data.length; i++) { %>
            <tr>
                <td>
                    <%= data[i].firstName %>
                </td>
                <td>
                    <%= data[i].lastName %>
                </td>
                <td>
                    <%= data[i].email %>
                </td>
                <td>
                    <%= data[i].address %>
                </td>
                <td>
                    <a href="/edit?id=<%= data[i].id %>" class="btn-edit" type="button">Edit</a>
                    <a href="/delete?id=<%= data[i].id %>" class="btn-delete" type="button">Delete</a>
                </td>
            </tr>
            <% } %>
   </table>
</body>
</html>